@using AccountingSuite.Models.Common
@model PaginatedList<AccountingSuite.Models.Master.AccountHead>

@{
    ViewData["Title"] = "Account Head List";
}

<!-- Alerts -->
@if (TempData["Message"] != null)
{
    <div class="alert alert-success alert-dismissible fade show mt-3" role="alert">
        @TempData["Message"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show mt-3" role="alert">
        @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<!-- Header -->
<div class="d-flex justify-content-between align-items-end mb-2">
    <h2 class="mb-0">Account Head List</h2>
</div>

<!-- Breadcrumb -->
<nav aria-label="breadcrumb" class="mb-2">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-area="SuperAdmin" asp-controller="Home" asp-action="Index">Home</a></li>
        <li class="breadcrumb-item active" aria-current="page">Account Head List</li>
    </ol>
</nav>

<!-- Account Lookup Input -->
<div class="mb-3">
    <form asp-action="Create" method="post" class="d-flex gap-2">
        <input type="text" id="accountLookupName" name="AccountHeadName" class="form-control"
            placeholder="Enter Account Head and select from list..." />
        <input type="hidden" id="accountTypeHidden" name="AccountHeadType" />
        <input type="hidden" id="lookupIdHidden" name="LookupId" />
        <button type="submit" class="btn btn-primary">Add</button>
    </form>
</div>

<!-- Table -->
<div class="table-responsive">
    <table class="table table-pill table-sm table-hover mt-2 align-middle">
        <thead class="table-light">
            <tr>
                <th>ID</th>
                <th>Code</th>
                <th>Name</th>
                <th>Type</th>
                <th>Status</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Any())
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td class="fw-bold">@item.AccountHeadId</td>
                        <td>@item.AccountHeadCode</td>
                        <td>@item.AccountHeadName</td>
                        <td>@item.AccountHeadType</td>
                        <td>
                            @if (item.IsActive)
                            {
                                <span class="badge bg-success">Active</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">Inactive</span>
                            }
                        </td>
                        <td>
                            <div class="form-check form-switch">
                                <input class="form-check-input toggle-switch" type="checkbox" @(item.IsActive ? "checked" : "")
                                    data-id="@item.AccountHeadId" data-name="@item.AccountHeadName"
                                    data-code="@item.AccountHeadCode" data-page="@Model.PageIndex"
                                    data-status="@(item.IsActive ? "false" : "true")"
                                    data-action="@(item.IsActive ? "Deactivate" : "Activate")" data-bs-toggle="modal"
                                    data-bs-target="#confirmModal" />
                            </div>
                        </td>

                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="6" class="text-center text-muted">No Account Heads found</td>
                </tr>
            }
        </tbody>
    </table>
</div>

<!-- Pagination -->
<div class="d-flex justify-content-center align-items-center gap-3 mt-3">
    @if (Model.HasPreviousPage)
    {
        <a asp-action="Index" asp-route-pageNumber="@(Model.PageIndex - 1)" class="text-primary">&lt;Prev</a>
    }
    else
    {
        <span class="text-muted">&lt;Prev</span>
    }

    <span class="fw-regular">
        @if (Model.TotalCount == 0)
        {
            <span class="fw-semibold">No records found</span>
        }
        else
        {
            <span>Showing @Model.StartRecord–@Model.EndRecord of @Model.TotalCount records</span>
        }
    </span>

    @if (Model.HasNextPage)
    {
        <a asp-action="Index" asp-route-pageNumber="@(Model.PageIndex + 1)" class="text-primary">Next&gt;</a>
    }
    else
    {
        <span class="text-muted">Next&gt;</span>
    }
</div>

<!-- Confirmation Modal -->
<div class="modal fade" id="confirmModal" tabindex="-1" aria-labelledby="confirmModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form asp-action="UpdateStatus" method="post">
                <input type="hidden" name="pageNumber" id="modalPageNumber" />
                <input type="hidden" name="accountHeadId" id="modalAccountHeadId" />
                <input type="hidden" name="isActive" id="modalIsActive" />

                <div class="modal-header">
                    <h5 class="modal-title" id="confirmModalLabel">Confirm Action</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <p id="confirmMessage">Are you sure?</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Yes, proceed</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Account Head Keyword Search
        $("#accountLookupName").autocomplete({
            source: '@Url.Action("SearchAccountLookup", "AccountHead", new { area = "SuperAdmin" })',
            minLength: 2,
            select: function (event, ui) {
                $("#accountLookupName").val(ui.item.accountHeadKeyword);
                $("#accountTypeHidden").val(ui.item.accountTypeKeyword);
                $("#lookupIdHidden").val(ui.item.lookupId);
            }
        });

        // Show modal when toggle is clicked
        $('#confirmModal').on('show.bs.modal', function (event) {
            var toggle = $(event.relatedTarget);
            var accountHeadId = toggle.data('id');
            var status = toggle.data('status');
            var action = toggle.data('action');
            var name = toggle.data('name');
            var code = toggle.data('code');
            var page = toggle.data('page');

            $('#modalAccountHeadId').val(accountHeadId);
            $('#modalIsActive').val(status);
            $('#modalPageNumber').val(page);

            $('#confirmMessage').text(
                "Are you sure you want to " + action + " Account Head '" + name + "' (Code: " + code + ")?"
            );

            var proceedBtn = $(this).find('.modal-footer button[type=submit]');
            if (action === "Deactivate") {
                proceedBtn.removeClass("btn-success").addClass("btn-danger").text("Yes, Deactivate");
            } else {
                proceedBtn.removeClass("btn-danger").addClass("btn-success").text("Yes, Activate");
            }
        });
    </script>
}