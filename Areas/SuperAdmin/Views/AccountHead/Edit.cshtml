@model AccountingSuite.Models.Master.AccountHead

<h2>Edit Account Head Status</h2>

<form asp-action="Edit" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="AccountHeadId" />
    <div class="form-check mb-3">
        <input asp-for="AccountHeadName" class="form-control" />
    </div>
    <div class="form-check mb-3">
        <input asp-for="AccountHeadType" class="form-control" />
    </div>
    <div class="form-check mb-3">
        <input asp-for="IsActive" class="form-check-input" type="checkbox" />
        <label asp-for="IsActive" class="form-check-label">Active</label>
    </div>

    <button type="submit" class="btn btn-primary">Update Status</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>