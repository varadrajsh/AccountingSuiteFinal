@using AccountingSuite.Models.Master
@model AccountingSuite.Models.Master.Party

@{
    ViewData["Title"] = "Edit Party";
}

@if (TempData["Message"] != null)
{
    <div class="alert alert-success">@TempData["Message"]</div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<h2>Edit Party</h2>

<form asp-action="Edit" method="post" class="needs-validation" novalidate>
    @Html.AntiForgeryToken()

    <div class="col-10">

        <!-- Hidden PartyId -->
        <input type="hidden" asp-for="PartyId" />

        <!-- State -->
        <div class="col-md-12 mb-3">
            <label asp-for="StateId" class="form-label">State</label>
            <select asp-for="StateId" asp-items="ViewBag.States" class="form-select">
                <option value="">-- Select State --</option>
            </select>
            <span asp-validation-for="StateId" class="text-danger"></span>
        </div>

        <!-- Party Code + Name -->
        <div class="row mb-3">
            <div class="col-md-6">
                <label asp-for="PartyCode" class="form-label"></label>
                <input asp-for="PartyCode" class="form-control" readonly />
                <span asp-validation-for="PartyCode" class="text-danger"></span>
            </div>
            <div class="col-md-6">
                <label asp-for="Name" class="form-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>

        <!-- Party Type + GSTIN -->
        <div class="row mb-3">
            <div class="col-md-6">
                <label asp-for="PartyType" class="form-label">Party Type</label>
                @* <select asp-for="PartyType" asp-items="Html.GetEnumSelectList<Party.PartyTypeEnum>()" class="form-select">
                    <option value="">-- Select Type --</option>
                </select> *@
                <select asp-for="StateId" asp-items="ViewBag.States"
                    class="form-select form-select-sm border-dark w-100">
                    <option value="">-- Select State --</option>
                </select>

                <span asp-validation-for="PartyType" class="text-danger"></span>
            </div>
            <div class="col-md-6">
                <label asp-for="GSTIN" class="form-label"></label>
                <input asp-for="GSTIN" class="form-control" />
                <span asp-validation-for="GSTIN" class="text-danger"></span>
            </div>
        </div>

        <!-- Address + Contact Number -->
        <div class="row mb-3">
            <div class="col-md-6">
                <label asp-for="Address" class="form-label"></label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="col-md-6">
                <label asp-for="ContactNumber" class="form-label"></label>
                <input asp-for="ContactNumber" class="form-control" />
                <span asp-validation-for="ContactNumber" class="text-danger"></span>
            </div>
        </div>

        <!-- Email -->
        <div class="row mb-3">
            <div class="col-md-6">
                <label asp-for="Email" class="form-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
        </div>

        <!-- IsActive -->
        <div class="row m-3">
            <div class="col-md-6 form-check">
                <input asp-for="IsActive" class="form-check-input" type="checkbox" />
                <label asp-for="IsActive" class="form-check-label">Active</label>
                <span asp-validation-for="IsActive" class="text-danger"></span>
            </div>
        </div>

        <!-- Buttons -->
        <div class="d-flex gap-2">
            <button type="submit" class="btn btn-primary">Update</button>
            <a asp-action="Index" class="btn btn-dark">Back to list</a>
        </div>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}