@model AccountingSuite.Models.Master.Party
@{
    Layout = "_Layout";
}

@if (TempData["Message"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["Message"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

<form asp-action="Create" method="post">
    @Html.AntiForgeryToken()

    <table class="table table-bordered table-striped">
        <tbody>
            <tr>
                <th>Name</th>
                <td><input asp-for="Name" class="form-control" /></td>
            </tr>
            <tr>
                <th>Party Type</th>
                <td>
                    <select asp-for="PartyType" class="form-select">
                        <option value="Customer">Customer</option>
                        <option value="Vendor">Vendor</option>
                        <option value="Both">Both</option>
                    </select>
                </td>
            </tr>
            <tr>
                <th>GSTIN</th>
                <td><input asp-for="GSTIN" class="form-control" /></td>
            </tr>
            <tr>
                <th>Address</th>
                <td><input asp-for="Address" class="form-control" /></td>
            </tr>
            <tr>
                <th>Contact Number</th>
                <td><input asp-for="ContactNumber" class="form-control" /></td>
            </tr>
            <tr>
                <th>Email</th>
                <td><input asp-for="Email" class="form-control" /></td>
            </tr>
            <tr>
                <th>Active</th>
                <td><input asp-for="IsActive" type="checkbox" /></td>
            </tr>
            <tr>
                <th>State</th>
                <td>
                    <select asp-for="StateId" class="form-select" asp-items="ViewBag.States">
                        <option value="">-- Select State --</option>
                    </select>
                </td>
            </tr>
        </tbody>
    </table>

    <button type="submit" class="btn btn-primary">Create</button>
    <a asp-action="Index" class="btn btn-outline-dark">Cancel</a>
</form>
