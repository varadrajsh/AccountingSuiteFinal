@using AccountingSuite.Models.Common
@using AccountingSuite.Models.Master
@model AccountingSuite.Models.Common.PaginatedList<AccountingSuite.Models.Master.Branch>

@{
    ViewData["Title"] = "Branch List";
}

<!-- Alerts -->
@if (TempData["Message"] != null)
{
    <div class="alert alert-success alert-dismissible fade show mt-3" role="alert">
        @TempData["Message"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show mt-3" role="alert">
        @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<!-- Header with Add + Search -->
<div class="d-flex justify-content-between align-items-end mb-2">
    <h2 class="mb-0">Branch List</h2>
    <div class="w-50">
        <form asp-action="Index" method="get" class="d-flex gap-2" id="searchForm">
            <input type="text" id="searchTerm" name="searchTerm"
                   value="@ViewData["CurrentFilter"]"
                   class="form-control form-control-sm border-dark"
                   placeholder="Enter keywords to search Branch Details" />
            <button type="submit" class="btn btn-sm btn-primary">Search</button>
            <a asp-action="Index" class="btn btn-sm btn-outline-secondary">Reset</a>
        </form>
    </div>
</div>

<!-- Breadcrumb -->
<nav aria-label="breadcrumb" class="mb-2">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Home" asp-action="Index">Home</a></li>
        <li class="breadcrumb-item active" aria-current="page">Branch List</li>
    </ol>
</nav>

<!-- Action buttons -->
<div class="d-flex flex-wrap gap-2 mb-3 w-100">
    <form asp-action="Index" method="get" class="d-flex gap-2 w-50">
        <select name="stateId" asp-items="ViewBag.States" class="form-select form-select-sm border-dark w-100">
            <option value="">-- Select State --</option>
        </select>
        <button type="submit" class="btn btn-sm btn-outline-primary text-nowrap">View Branches</button>
    </form>

    <a asp-action="Index" class="btn btn-sm btn-success text-center text-nowrap">View All Branches</a>
    <a asp-action="Create" class="btn btn-sm btn-primary text-center text-nowrap">Add Branch</a>
</div>

<!-- Table -->
<div class="table-responsive">
    <table class="table table-sm table-hover mt-2 align-middle">
        <thead class="table-light">
            <tr>
                <th>Branch ID</th>
                <th>Branch Code</th>
                <th>Branch Name</th>
                <th>Mobile Number</th>
                <th>State</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        @if (Model.TotalCount == 0)
        {
            <tr><td colspan="7" class="text-center fw-semibold">No records found</td></tr>
        }
        else
        {
            @foreach (var branch in Model)
            {
                <tr>
                    <td class="fw-bold">@branch.BranchId</td>
                    <td>@branch.BranchCode</td>
                    <td>@branch.BranchName</td>
                    <td>@branch.MobNumber</td>
                    <td>@branch.State?.StateName</td>
                    <td>
                        @if (branch.IsActive)
                        {
                            <span class="badge bg-success">Active</span>
                        }
                        else
                        {
                            <span class="badge bg-danger">Inactive</span>
                        }
                    </td>
                    <td>
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb mb-0">
                                <li class="breadcrumb-item">
                                    <a asp-action="Edit" asp-route-id="@branch.BranchId" class="text-primary">Edit</a>
                                </li>
                                <li class="breadcrumb-item">
                                    <a href="javascript:void(0)" class="text-primary" onclick="showDetails(@branch.BranchId)">Details</a>
                                </li>
                                <li class="breadcrumb-item">
                                    <form asp-action="UpdateStatus" method="post" class="d-inline">
                                        <input type="hidden" name="branchId" value="@branch.BranchId" />
                                        <input type="hidden" name="isActive" value="@(branch.IsActive ? "false" : "true")" />
                                        <button type="submit" class="btn btn-link p-0 text-danger">Delete</button>
                                    </form>
                                </li>
                            </ol>
                        </nav>
                    </td>
                </tr>
            }
        }
        </tbody>
    </table>
</div>

<!-- Pagination -->
<div class="d-flex justify-content-center align-items-center gap-3 mt-3">
    @if (Model.HasPreviousPage)
    {
        <a asp-action="Index" asp-route-pageNumber="@(Model.PageIndex - 1)"
           asp-route-searchTerm="@ViewData["CurrentFilter"]" class="text-primary">&lt;Prev</a>
    }
    else
    {
        <span class="text-muted">&lt;Prev</span>
    }

    <span class="fw-regular">
        Showing @Model.StartRecord–@Model.EndRecord of @Model.TotalCount records
    </span>

    @if (Model.HasNextPage)
    {
        <a asp-action="Index" asp-route-pageNumber="@(Model.PageIndex + 1)"
           asp-route-searchTerm="@ViewData["CurrentFilter"]" class="text-primary">Next&gt;</a>
    }
    else
    {
        <span class="text-muted">Next&gt;</span>
    }
</div>

<!-- Modals -->
<div class="modal fade" id="detailsModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-body">Details content goes here</div>
        </div>
    </div>
</div>

<div class="modal fade" id="editModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-body">Edit form goes here</div>
        </div>
    </div>
</div>

<div class="modal fade" id="deleteModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-body">Delete confirmation goes here</div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function showDetails(id) {
            // TODO: Ajax call to load branch details by id
            $('#detailsModal').modal('show');
        }
        function showEdit(id) {
            $('#editModal').modal('show');
        }
        function showDelete(id) {
            $('#deleteModal').modal('show');
        }
    </script>
}
