<!-- Table -->
<div class="table-responsive">
    <table class="table table-pill table-sm table-hover mt-2">
        <thead>
            <tr>
                <th>State Name</th>
                <th>Region</th>
                <th>Actions</th> <!-- ✅ new column -->
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (var s in Model)
                {
                    <tr>
                        <td>@s.StateName</td>
                        <td>@regions?.FirstOrDefault(r => r.RegionId == s.RegionId)?.RegionName</td>
                        <td>
                            <nav aria-label="breadcrumb">
                                <ol class="breadcrumb mb-0">
                                    <li class="breadcrumb-item">
                                        <a href="javascript:void(0)" class="text-primary"
                                            onclick="loadBranches(@s.StateId)">View Branches</a>
                                    </li>
                                </ol>
                            </nav>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="3" class="text-center text-muted">No states found.</td>
                </tr>
            }
        </tbody>
    </table>
</div>


<!-- Add State Modal -->
<div class="modal fade" id="addStateModal" tabindex="-1" aria-labelledby="addStateLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            @* @Html.Partial("_CreatePartial", new AccountingSuite.Models.Master.State()) *@
            <partial name="_CreatePartial" model="new AccountingSuite.Models.Master.State()" />

        </div>
    </div>
</div>
<div id="branchTableContainer" class="mt-3"></div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
         <script>
        function loadBranches(stateId, pageNumber = 1) {
            $("#branchTableContainer").load('/Admin/Branch/TableByState?stateId=' + stateId + '&pageNumber=' + pageNumber);
        }
          function loadBranchDetails(branchId) {
        $("#branchDetailsContent").load('/Admin/Branch/Details?id=' + branchId);
    }
    </script>
}
