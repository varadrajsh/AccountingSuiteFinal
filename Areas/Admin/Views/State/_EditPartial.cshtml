@model AccountingSuite.Models.Master.State
@{
    var regions = ViewBag.Regions as IEnumerable<AccountingSuite.Models.Master.Region>;
    var regionName = regions?.FirstOrDefault(r => r.RegionId == Model.RegionId)?.RegionName;
}

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="StateId" />
    <input type="hidden" asp-for="RegionId" /> <!-- keep RegionId hidden so FK stays valid -->

    <div class="modal-header">
        <h5 class="modal-title">Edit State</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
    </div>

    <div class="modal-body">
        <div class="mb-3">
            <label asp-for="StateName" class="form-label">State Name</label>
            <input asp-for="StateName" class="form-control" />
            <span asp-validation-for="StateName" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="form-label">Region</label>
            <!-- Show region name as read-only -->
            <input type="text" class="form-control" value="@regionName" readonly />
            <!-- Hidden RegionId ensures the correct FK is posted -->
            <span asp-validation-for="RegionId" class="text-danger"></span>
        </div>
    </div>

    <div class="modal-footer">
        <button type="submit" class="btn btn-primary">Update</button>
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
    </div>
</form>
