@{
    ViewData["Title"] = "Edit Item";
}

<!-- Alerts -->
<div class="alert alert-success d-none">Success message goes here</div>
<div class="alert alert-danger d-none">Error message goes here</div>

<h2>Edit Item</h2>

<form method="post" class="needs-validation" novalidate>
    <div class="col-10">

        <!-- Hidden ID -->
        <input type="hidden" />

        <!-- State -->
        <div class="col-md-12 mb-3">
            <label class="form-label">State</label>
            <select class="form-select">
                <option value="">-- Select State --</option>
                <option>Karnataka</option>
                <option>Maharashtra</option>
            </select>
            <span class="text-danger">Validation message</span>
        </div>

        <!-- Code + Name -->
        <div class="row mb-3">
            <div class="col-md-6">
                <label class="form-label">Code</label>
                <input class="form-control" readonly />
                <span class="text-danger">Validation message</span>
            </div>
            <div class="col-md-6">
                <label class="form-label">Name</label>
                <input class="form-control" />
                <span class="text-danger">Validation message</span>
            </div>
        </div>

        <!-- Type + GSTIN -->
        <div class="row mb-3">
            <div class="col-md-6">
                <label class="form-label">Type</label>
                <select class="form-select">
                    <option value="">-- Select Type --</option>
                    <option>Asset</option>
                    <option>Liability</option>
                    <option>Equity</option>
                    <option>Income</option>
                    <option>Expense</option>
                </select>
                <span class="text-danger">Validation message</span>
            </div>
            <div class="col-md-6">
                <label class="form-label">GSTIN</label>
                <input class="form-control" />
                <span class="text-danger">Validation message</span>
            </div>
        </div>

        <!-- Address + Contact Number -->
        <div class="row mb-3">
            <div class="col-md-6">
                <label class="form-label">Address</label>
                <input class="form-control" />
                <span class="text-danger">Validation message</span>
            </div>
            <div class="col-md-6">
                <label class="form-label">Contact Number</label>
                <input class="form-control" />
                <span class="text-danger">Validation message</span>
            </div>
        </div>

        <!-- Email -->
        <div class="row mb-3">
            <div class="col-md-6">
                <label class="form-label">Email</label>
                <input class="form-control" />
                <span class="text-danger">Validation message</span>
            </div>
        </div>

        <!-- IsActive -->
        <div class="row m-3">
            <div class="col-md-6 form-check">
                <input class="form-check-input" type="checkbox" />
                <label class="form-check-label">Active</label>
                <span class="text-danger">Validation message</span>
            </div>
        </div>

        <!-- Buttons -->
        <div class="d-flex gap-2">
            <button type="submit" class="btn btn-primary">Update</button>
            <button type="button" class="btn btn-dark">Back to list</button>
        </div>
    </div>
</form>

@section Scripts {
    <!-- Validation scripts placeholder -->
}
