@model AccountingSuite.Models.Common.PaginatedList<AccountingSuite.Models.Accounting.AccountHead>

@if (TempData["Message"] != null)
{
    <div class="alert alert-success alert-dismissible fade show mt-3" role="alert">
        @TempData["Message"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show mt-3" role="alert">
        @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="d-flex justify-content-between align-items-start mb-3">
    <!-- Left block: AccountHead List + Add -->
    <div class="d-flex align-items-center gap-2">
        <h2 class="mb-0">Account Head Page</h2>
        <a class="btn btn-primary" asp-action="Create">Add Account Head</a>
    </div>

    <!-- Right block: Search form -->
    <div class="w-50">
        <form asp-action="Index" method="get" class="mb-0 d-flex flex-column flex-grow-1">
            <div class="form-group d-flex align-items-center gap-2 mb-2">
                <label for="searchTerm" class="form-label mb-0 text-nowrap">Search Account Head</label>
                <input type="text" id="searchTerm" name="searchTerm" class="form-control border-dark"
                       placeholder="Enter keywords to search Account Head"
                       value="@ViewData["CurrentFilter"]" />
                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-primary">Search</button>
                    <a asp-action="Index" class="btn btn-outline-secondary">Reset</a>
                </div>
            </div>
        </form>
    </div>
</div>

<div class="card-body">
    <div class="table-responsive text-nowrap">
        <table class="table table-striped table-bordered table-hover mt-3">
            <thead>
                <tr>
                    <th>Code</th>
                    <th>Name</th>
                    <th>Type</th>
                    <th>Status</th>
                    <th style="width:120px;">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var a in Model)
                {
                    <tr>
                        <td>@a.AccountHeadCode</td>
                        <td>@a.AccountHeadName</td>
                        @* <td>@a.AccountHeadType</td> *@
                        <td>
    @switch (a.AccountHeadType)
    {
        case AccountingSuite.Models.Accounting.AccountHeadTypeEnum.Assets:
            <span class="badge bg-primary">Assets</span>;
            break;
        case AccountingSuite.Models.Accounting.AccountHeadTypeEnum.Liabilities:
            <span class="badge bg-danger">Liabilities</span>;
            break;
        case AccountingSuite.Models.Accounting.AccountHeadTypeEnum.Equity:
            <span class="badge bg-info">Equity</span>;
            break;
        case AccountingSuite.Models.Accounting.AccountHeadTypeEnum.Income:
            <span class="badge bg-success">Income</span>;
            break;
        case AccountingSuite.Models.Accounting.AccountHeadTypeEnum.Expenses:
            <span class="badge bg-warning text-dark">Expenses</span>;
            break;
    }
</td>

                        <td>
                            @if (a.IsActive)
                            {
                                <span class="badge bg-success">Active</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">Inactive</span>
                            }
                            
                        </td>
                        <td>
                            <button class="btn btn-sm btn-secondary" data-bs-toggle="modal" data-bs-target="#editModal"
                                    onclick="loadEdit(@a.AccountHeadId)">Edit</button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        @await Html.PartialAsync("_Pagination", Model)
    </div>
</div>

<div class="text-muted text-center fw-semibold">
    Showing @Model.StartRecordâ€“@Model.EndRecord of @Model.TotalCount records
</div>

<!-- Edit Modal -->
<div class="modal fade" id="editModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Edit Account Head</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body" id="editContent">
                <!-- Edit form will be loaded here -->
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function loadEdit(id) {
            $("#editContent").load('/AccountHead/Edit/' + id, function (response, status) {
                if (status !== 'success') {
                    $("#editContent").html('<div class="text-danger">Failed to load edit form.</div>');
                }
            });
        }

        // Delegated submit handler for edit form
        $(document).on('submit', '#editForm', function (e) {
            e.preventDefault();
            $.ajax({
                url: '/AccountHead/Edit',
                type: 'POST',
                data: $(this).serialize(),
                headers: { 'RequestVerificationToken': getAntiForgeryToken() },
                success: function (result) {
                    if (result && result.success) {
                        location.reload();
                    } else {
                        $("#editContent").html(result); // re-rendered partial with validation errors
                    }
                },
                error: function () {
                    alert('Failed to save changes.');
                }
            });
        });

        function getAntiForgeryToken() {
            return $('input[name="__RequestVerificationToken"]').val();
        }
    </script>
}
