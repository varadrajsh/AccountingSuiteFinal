@model AccountingSuite.Models.Accounting.AccountHead

<form id="editForm" asp-action="Edit" method="post">
    @Html.AntiForgeryToken()
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <!-- Hidden ID -->
    <input type="hidden" asp-for="AccountHeadId" />

    <!-- Account Head Name (read-only) -->
    <div class="form-group mt-3">
        <label asp-for="AccountHeadName" class="form-label"></label>
        <input asp-for="AccountHeadName" class="form-control" readonly />
    </div>

    <!-- Account Head Type (read-only) -->
    <div class="form-group mt-3">
        <label asp-for="AccountHeadType" class="form-label"></label>
        <input asp-for="AccountHeadType" class="form-control" readonly />
    </div>

    <!-- Status (Active/Inactive dropdown) -->
    <div class="form-group mt-3">
        <label asp-for="IsActive" class="form-label">Status</label>
        <select asp-for="IsActive" class="form-select">
            <option value="true" selected="@(Model.IsActive ? "selected" : null)">Active</option>
            <option value="false" selected="@(Model.IsActive ? null : "selected")">Inactive</option>
        </select>
    </div>

    <!-- Buttons -->
    <div class="form-group mt-3">
        <button type="submit" class="btn btn-primary">Save Changes</button>
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
    </div>
</form>
