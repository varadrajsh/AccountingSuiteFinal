<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - AccountingSuite</title>
    <!-- Bootstrap CSS CDN -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
          rel="stylesheet"
          integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
          crossorigin="anonymous" />
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" />
    <!-- Site CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>

<body>
    <!-- Topbar -->
    <nav class="navbar navbar-expand-lg navbar-light shadow-sm topbar">
        <div class="container-xl">
            <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                <i class="bi bi-speedometer2"></i> AccountingSuite
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="mainNavbar">
                <ul class="navbar-nav ms-auto align-items-center">
                    <!-- Search bar -->
                    <li class="nav-item me-3">
                        <form class="d-flex">
                            <input class="form-control form-control-sm me-2" type="search" placeholder="Search..." aria-label="Search" />
                            <button class="btn btn-sm btn-outline-secondary" type="submit">
                                <i class="bi bi-search"></i>
                            </button>
                        </form>
                    </li>
                    <!-- Notifications -->
                    <li class="nav-item">
                        <a class="nav-link" href="#"><i class="bi bi-bell"></i> Notifications</a>
                    </li>
                    <!-- Profile -->
                    <li class="nav-item">
                        <a class="nav-link" href="#"><i class="bi bi-person-circle"></i> Profile</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Sidebar + Content -->
    <div class="main-layout">
        <!-- Sidebar -->
        <div class="sidebar">
            <div class="brand">AccountingSuite</div>
            <ul class="nav flex-column">
                <!-- Masters collapse -->
                <li class="nav-item">
                    <a class="nav-link collapsed" data-bs-toggle="collapse" href="#mastersMenu" role="button">
                        <i class="bi bi-gear"></i> Masters <i class="bi bi-chevron-right arrow"></i>
                    </a>
                    <div class="collapse" id="mastersMenu">
                        <ul class="nav flex-column ms-3">
                            <ul class="navbar-nav">
                                <li class="nav-item">
                                    <a class="nav-link" asp-area="Admin" asp-controller="Party" asp-action="Index">Parties</a>
                                </li>
                               
                                <li class="nav-item">
                                    <a class="nav-link" asp-area="Admin" asp-controller="State" asp-action="Index">Region / States</a>
                                </li>
                                 <li class="nav-item">
                                    <a class="nav-link" asp-area="Admin" asp-controller="Branch" asp-action="Index">Branch</a>
                                </li>
                            </ul>

                        </ul>
                    </div>
                </li>
                <!-- Transactions collapse -->
                <li class="nav-item">
                    <a class="nav-link collapsed" data-bs-toggle="collapse" href="#transactionsMenu" role="button">
                        <i class="bi bi-journal-text"></i> Transactions <i class="bi bi-chevron-right arrow"></i>
                    </a>
                    <div class="collapse" id="transactionsMenu">
                        <ul class="nav flex-column ms-3">
                            <li><a class="nav-link" asp-controller="JournalEntry" asp-action="Index">Journal Entries</a></li>
                            <li><a class="nav-link" asp-controller="Sales" asp-action="Index">Sales</a></li>
                            <li><a class="nav-link" asp-controller="Purchase" asp-action="Index">Purchase</a></li>
                            <li><a class="nav-link" asp-controller="Adjustment" asp-action="Index">Adjustments</a></li>
                        </ul>
                    </div>
                </li>
                <!-- Reports collapse -->
                <li class="nav-item">
                    <a class="nav-link collapsed" data-bs-toggle="collapse" href="#reportsMenu" role="button">
                        <i class="bi bi-bar-chart"></i> Reports <i class="bi bi-chevron-right arrow"></i>
                    </a>
                    <div class="collapse" id="reportsMenu">
                        <ul class="nav flex-column ms-3">
                            <li><a class="nav-link" asp-controller="Reports" asp-action="TrialBalance">Trial Balance</a></li>
                            <li><a class="nav-link" asp-controller="Reports" asp-action="Ledger">Ledger</a></li>
                            <li><a class="nav-link" asp-controller="Reports" asp-action="ProfitLoss">Profit & Loss</a></li>
                            <li><a class="nav-link" asp-controller="Reports" asp-action="BalanceSheet">Balance Sheet</a></li>
                        </ul>
                    </div>
                </li>
                <!-- Other -->
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Home" asp-action="About"><i class="bi bi-info-circle"></i> About</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Account" asp-action="Logout"><i class="bi bi-box-arrow-right"></i> Logout</a>
                </li>
            </ul>
        </div>

        <!-- Content -->
        <div class="content">
            @RenderBody()
        </div>
    </div>

    <!-- Footer -->
    <footer class="border-top footer text-muted mt-3">
        <div class="container-xl text-center">
            &copy; @DateTime.Now.Year - AccountingSuite - <a asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
            crossorigin="anonymous"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
